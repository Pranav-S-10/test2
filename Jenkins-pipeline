pipeline {
    agent any

    tools { nodejs 'node' }

    stages {
        stage('Clone code from GitHub') {
            steps {
                script {
                    checkout scmGit(
                        branches: [[name: '*/main']],
                        extensions: [],
                        userRemoteConfigs: [[
                            credentialsId: 'GitHub',
                            url: 'https://github.com/rpillaiakshay/Nodeapp'
                        ]]
                    )
                }
            }
        }

        stage('Node JS Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Node JS Docker Image') {
            steps {
                script {
                    sh 'docker build -t rpillaiakshay/node-app:latest .'
                }
            }
        }

        stage('Deploy Docker Image to DockerHub') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'DockerHub', variable: 'Docker-Credential')]) {
                        sh 'echo $DOCKERHUB_PASSWORD | docker login -u rpillaiakshay --password-stdin'
                    }
                    sh 'docker push rpillaiakshay/latest'
                }
            }
        }

        stage('Deploying Node App to Kubernetes') {
            steps {
                script {
                    sh 'aws eks update-kubeconfig --name sample --region ap-south-1'
                    sh 'kubectl get ns'
                    sh 'kubectl apply -f nodejs-app.yaml'
                }
            }
        }
    }
}
